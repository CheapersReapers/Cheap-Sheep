<?xml version="1.0" encoding="utf-8"?>

<com.example.scandaloussales.CustomScrollView
    android:id="@+id/scrollMap"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvEnterDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:fontFamily="casual"
            android:text="Enter product details:"
            android:textColor="#000000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivPostImage"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@+id/tvEnterDetails"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="133dp"
            android:background="#FFFFFF"
            android:visibility="visible"
            app:srcCompat="@drawable/avatar_1" />

        <Button
            android:id="@+id/btnUploadImage"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/ivPostImage"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="132dp"
            android:layout_marginTop="8dp"
            android:background="#FFFFFF"
            android:text="Upload Image" />


        <EditText
            android:id="@+id/etUPC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPrice"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="-7dp"
            android:fontFamily="casual"
            android:hint="UPC" />

        <EditText
            android:id="@+id/etProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnUploadImage"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="-4dp"
            android:fontFamily="casual"
            android:hint="Product Name" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etProductName"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="-2dp"
            android:fontFamily="casual"
            android:hint="Price" />

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/etUPC"
            android:layout_marginTop="28dp"
            app:cameraBearing="112.5"
            app:cameraTargetLat="28.527383"
            app:cameraTargetLng="-81.367578"
            app:cameraTilt="30"
            app:cameraZoom="13"
            app:mapType="normal"
            app:uiCompass="false"
            app:uiRotateGestures="true"
            app:uiScrollGestures="true"
            app:uiTiltGestures="true"
            app:uiZoomControls="false"
            app:uiZoomGestures="true"/>

        <Button
            android:id="@+id/btnPost"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_below="@+id/map"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="102dp"
            android:layout_marginBottom="1dp"
            android:text="Post Product Listing" />

    </RelativeLayout>
</com.example.scandaloussales.CustomScrollView>


